<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_Samples.Views.UI_NavigationToolbarView"
             BackgroundColor="AliceBlue"
             Title="UI_NavigationToolbarView">

    <NavigationPage.TitleView>
        <StackLayout BackgroundColor="Transparent" Orientation="Horizontal" Padding="0" Margin="0">
            <Label Grid.Column="0" Text="Create Group" FontSize="Large" HorizontalOptions="Start" VerticalOptions="CenterAndExpand" LineBreakMode="NoWrap"/>
            <Button Grid.Column="1" Text="CLOSE" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" />
            <Button Grid.Column="2" Text="SAVE" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </NavigationPage.TitleView>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Displaying Views in the Navigation Bar" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>