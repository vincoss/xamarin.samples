<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Entry_Samples.Views.EntryFocusView"
             Title="EntryFocusView">

    <StackLayout>
        <Label Text="New shall focus top entry and have cursor last index while keyboard is not collapsed" />
        <Entry x:Name="entryA" Placeholder="A" Text="{Binding A}"  ReturnType="Next" />
        <Entry Placeholder="B" />
    </StackLayout>
    
</ContentPage>