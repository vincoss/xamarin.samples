<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaterialVisual_Samples.Views.FloatingLabelSampleView"
             xmlns:controls="clr-namespace:MaterialVisual_Samples.Views.Shared" >
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" WidthRequest="400" HorizontalOptions="Center">
            <controls:FloatingLabelEntry Title="Username" HorizontalOptions="Center" Margin="20,5,20,10" />
            <controls:FloatingLabelEntry Title="Password" IsPassword="true" HorizontalOptions="Center" Margin="20,10,20,10" />
            <controls:FloatingLabelEditor Title="Comment" HorizontalOptions="Center" Margin="20,10,20,10" Keyboard="Telephone" />
            <Button Text="Sign In" HeightRequest="46" BackgroundColor="#00C0FF" TextColor="#EFFBFF" Margin="20,10,20,5" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>