<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_Navigation.Views.ModalPageParentView"
             Title="Users - ModalPageParentView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Users"/>
            <ListView x:Name="lvUsers" ItemSelected="lvUsers_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>