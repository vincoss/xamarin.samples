<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignaturePadSample.Views.SampleTwo"
             Title="SampleTwo">

    <StackLayout Margin="5">
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding SignatureCommand}"/>
            </StackLayout.GestureRecognizers>
            <Label Text="Signature" FontSize="Large" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" />
            <Image HeightRequest="24" Source="{Binding SignatureUrl}" HorizontalOptions="FillAndExpand" IsVisible="{Binding ShowSignature}"/>
            <Label Text=">" FontSize="Large" HorizontalOptions="End" Margin="5,0,0,0"/>
        </StackLayout>
    </StackLayout>
</ContentPage>