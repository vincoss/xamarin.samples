<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignaturePadSample.Views.SignatureView"
             xmlns:cu="clr-namespace:SignaturePadSample.Xaml">

    <StackLayout Margin="5">
        <StackLayout Orientation="Horizontal">
            <Button x:Name="btnCancel" Text="Cancel" Clicked="btnCancel_Clicked" />
            <Label Text="Signature" Margin="10" FontSize="Title" HorizontalOptions="Center"/>
            <Button x:Name="btnSave" Text="Save" Command="{Binding SaveCommand}"/>
        </StackLayout>

        <cu:CustomSignaturePadView
	                    x:Name="signatureViews"
	                    StrokeWidth="3"
	                    StrokeColor="Orange"
	                    BackgroundColor="White" 
                        SignatureCommand="{Binding SignatureCommand}"
                        HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>

        <Button x:Name="btnClear" Text="Clear"
                Padding="20" BackgroundColor="#DCDCDC" 
                Clicked="btnClear_Clicked" />
    </StackLayout>
</ContentPage>